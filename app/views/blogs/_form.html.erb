<%= stylesheet_link_tag "blogs" %>
<%= tinymce %>
<%= form_for @blog, html: { multipart: true } do |f| %>
<div class="row">
    <div class="col">
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, {class: "form-control", required: true} %>
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <%= f.label :author %>
            <%= f.text_field :author, {class: "form-control", required: true} %>
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, {class: "form-control-file"}%>
        </div>
    </div>
</div>
<%= f.text_area :content, :class => "tinymce", :rows => 18, :cols => 120 %>
</br>
<div class="form-group">
<%= f.label :tag_list %><br>
<%= f.text_field :tag_list, {'class' => 'form-control', 'data-role' => 'tagsinput', 'value' => ''} %>
</div>
<br>
<%= f.submit 'Save', {class: 'btn btn-success'} %>
<% end %>
