<%= form_for @contact, html:{multipart: true} do |f| %>
	<br>
	<%= f.label :'First Name' %>
	<br>
	<%= f.text_field :first %>
	<br>
	<br>
	<%= f.label :'Last Name' %>
	<br>
	<%= f.text_field :last %>
	<br>
	<br>
	<%= f.label :'Email *' %>
	<br>
	<%= f.email_field :email, required: true %>
	<br>
	<br>
	<%= f.label :'What is the nature of your inquiry *' %>
	<br>
	<%= f.select :inquiry, options_for_select([['Select One'],['General Inquiries/Comments'], ['Playlist Question'],['Concert Announcements'],['Request FREE KSPC License Plate Name (INCLUDE YOUR MAILING ADDRESS']], :required => true) %>
	<br>
	<br>
	<%= f.label :comment %>
	<br>
	<%= f.text_field :comment %>
	<br><br>
	<%= f.submit :'Submit'%>

<% end %>