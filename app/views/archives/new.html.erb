<h2>New Archive</h2>
<hr>

<%= form_for @archive, html: { multipart: true } do |f| %>
  <%= f.label :media %>
  <%= f.file_field :media, {required: true} %>
  <br>
  <%= f.label :title %>
  <%= f.text_area :title, {required: true} %>
  <br>
  <%= f.submit 'Submit', {class: 'btn btn-success'} %>
<% end %>